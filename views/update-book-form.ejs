<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/css/style.css" />
        <title>Update Book</title>
    </head>
    <body>
        <header>
            <h1>Update Book</h1>
        </header>

        <form action="/api/update-book/<%=book.id %>" method="POST">
            <label for="title">Title</label>
            <input
                type="text"
                id="title"
                name="title"
                value="<%=book.title %>"
                required
            />
            <br />
            <label for="author">Author</label>
            <input
                type="text"
                id="author"
                name="author"
                value="<%=book.author %>"
                required
            />
            <br />
            <label for="price">Price</label>
            <input
                type="text"
                id="price"
                name="price"
                value="<%=book.price %>"
                required
            />
            <br />
            <label for="image">Image URL</label>
            <input
                type="url"
                id="image"
                name="image"
                value="<%=book.image %>"
                required
            />
            <br />
            <button type="submit">Submit</button>
        </form>
    </body>
</html>